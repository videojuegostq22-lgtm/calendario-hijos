rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // ⚠️ MODO DEFINITIVO (PÚBLICO)
      // Como la aplicación actualmente no tiene sistema de Login/Usuarios (es un MVP familiar),
      // permitimos lectura y escritura a cualquiera que tenga la configuración de la App.
      // Hemos eliminado la restricción de fecha (el "if request.time < timestamp...") para que no caduque.
      
      allow read, write: if true;
    }
  }
}
